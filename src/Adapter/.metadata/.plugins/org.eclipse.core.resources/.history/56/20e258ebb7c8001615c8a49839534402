#ifndef DRIVERS_INC_ECU_CONFIGURE_H_
#define DRIVERS_INC_ECU_CONFIGURE_H_

/* The class for configure the board, bring the board to a
 * appropriate state to start the operation
 */
class Ecu_Configure
{
public:
	static Ecu_Configure * instance(); // for singleton mode
private:
	Ecu_Configure();                   // constructor
	void Board_Configure();            // private function only used by constructor
	static bool IsConfigured;          // the variable indicates the ECU board whether configured or not
};



#endif /* DRIVERS_INC_ECU_CONFIGURE_H_ */
